<?xml version="1.0" encoding="UTF-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="FatturaXML">
    <xs:complexType>
      <xs:sequence>

        <!-- INTESTAZIONE -->
        <xs:element name="Intestazione">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="NumeroFattura" type="xs:string"/>
              <xs:element name="DataFattura" type="xs:date"/>
              <xs:element name="DataScadenza" type="xs:date"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <!-- VENDITORE -->
        <xs:element name="Venditore">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="RagioneSociale" type="xs:string"/>
              <xs:element name="PartitaIVA" type="xs:string"/>
              <xs:element name="Indirizzo" type="xs:string"/>
              <xs:element name="Citta" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <!-- CLIENTE -->
        <xs:element name="Cliente">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="RagioneSociale" type="xs:string"/>
              <xs:element name="PartitaIVA" type="xs:string"/>
              <xs:element name="Indirizzo" type="xs:string"/>
              <xs:element name="Citta" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <!-- ARTICOLI -->
        <xs:element name="Articoli">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Articolo" minOccurs="0" maxOccurs="unbounded">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Descrizione" type="xs:string"/>
                    <xs:element name="Quantita" type="xs:int"/>
                    <xs:element name="PrezzoUnitario" type="xs:decimal"/>
                    <xs:element name="PrezzoTotale" type="xs:decimal"/>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <!-- TOTALI -->
        <xs:element name="Totali">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Imponibile" type="xs:decimal"/>
              <xs:element name="IVA" type="xs:decimal"/>
              <xs:element name="Totale" type="xs:decimal"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

        <!-- PAGAMENTO -->
        <xs:element name="DettagliPagamento">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="Metodo" type="xs:string"/>
              <xs:element name="IBAN" type="xs:string"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>

      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>
